// Custom styles.

$ho1_contianer_background_color = #f4f4f4;
$ho1_header_background_color = #ffffff;
$ho1_menu_item_color = #60daaa;
$ho1_button_color = #000000;
$ho1_button_border_color = #b0b0b0;
$ho1_button_border_hover_color = #60daaa;
$ho1_sidebar_background_color = #f8f8f8;
$ho1_sidebar_toggle_line_background_color = #ffffff;
$ho1_sidebar_toggle_line_background_hover_color = #60daaa;
$ho1_back_to_top_hover_color = #60daaa;

.container {
    background-color: $ho1_contianer_background_color;
}

.logo-line-before,
.logo-line-after {
    display: none;
}

.header {
    width: 100%;
    position: fixed;
    top: 0;
    right: 0;
    z-index: 1020;
    background-color: $ho1_header_background_color;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    transition: all 0.2s ease-in;

    .header-inner {
        margin-bottom: 0;
        padding: 10px 0 10px;

        .site-meta {
            margin-left: 10px;
        }

        +desktop() {
            width: auto;
            max-width: 700px;
        }
    }
}

.menu {
    margin-top: 4px;

    .menu-item {
        margin-left: 20px;

        a {
            font-size: 15px;
            transition: color 0.2s ease-in-out 0.0s;
        }
    }

    .menu-item a:hover {
        background: none;
        color: $ho1_menu_item_color;
    }
}

.main {
    margin-top: 0!important;
    padding-top: 80px;
    background-color: #f4f4f4;
}

.container .main-inner {
    margin-top: 40px;
    //width: 900px;

    +mobile() {
        width: auto;
    }
    +tablet() {
        width: 90%;
    }
    +desktop() {
        width: auto;
        max-width: 1000px;
    }
    +desktop-large() {
        width: 1000px;
    }
}

.links-of-author a {
    padding: 0 5px 0 3px;
}

.post-body {

    h1::before {
        content: 'ยง';
        //font-family: FontAwesome;
        margin-right: 10px;
    }

    h2 {
        border-left: 4px solid #555;
        margin: 30px -20px 15px -20px;
        padding: 0 25px!important;
        background-color: #fbfbfb;
        line-height: 44px;
        font-size: 22px;
        font-weight: normal;
    }

    h3, h4, h5, h6 {
        padding-top: 0;
    }

    p {
        text-indent: 2em;
    }
}

.posts-expand {

    .post {
        margin-top: 80px;
    }

    .post-type-normal {
        padding: 10px 20px;
        background-color: #fff;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
    }

    .post-title,
    .post-meta {
        text-align: center;
    }

    .post-meta {
        margin-top: 20px;
        margin-bottom: 40px;
    }

    .post-button {
        margin-top: 35px;
        padding-top: 25px;
        border-top: 2px dashed #e0e0e0;
        text-align: center;

        a {
            color: $ho1_button_color;
            border: none;
            padding: 0 10px;
        }


        .btn {
            border: 0;
            box-sizing: border-box;
            box-shadow: inset 0 0 0 1px $ho1_button_border_color;
            position: relative;
            padding-left: 12px;
        }

        .btn::before, .btn::after {
            box-sizing: border-box;
            content: '';
            position: absolute;

            border: 2px solid transparent;
            width: 0;
            height: 0;
        }

        .btn::before {
            top: 0;
            left: 0;
        }

        .btn::after {
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
        }

        .btn:hover::before, .btn:hover::after {
            width: 100%;
            height: 100%;
        }

        .btn:hover::before {
            border-top-color: $ho1_button_border_hover_color;
            border-right-color: $ho1_button_border_hover_color;
            transition: width 0.2s ease-out, height 0.2s ease-out 0.2s;
        }

        .btn:hover::after {
            border-bottom-color: $ho1_button_border_hover_color;
            border-left-color: $ho1_button_border_hover_color;
            //transition: border-color 0s ease-out 0.4s, width 0.2s ease-out 0.4s, height 0.2s ease-out 0.6s;
            transition: height 0.2s ease-out, width 0.2s ease-out 0.2s;
        }
    }
}

