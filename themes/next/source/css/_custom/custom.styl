// Custom styles.

$ho1_button_color = #000000;
$ho1_button_border_color = #b0b0b0;
$ho1_button_border_hover_color = #60daaa;


.logo-line-before,
.logo-line-after {
    display: none;
}

.posts-expand {

    .post-title,
    .post-meta {
        text-align: center;
    }

    .post-meta {
        margin-top: 20px;
        margin-bottom: 40px;
    }

    .post-button {
        margin-top: 50px;
        text-align: center;

        a {
            color: $ho1_button_color;
            border: none;
            padding: 0 10px;
        }


        .btn {
            border: 0;
            box-sizing: border-box;
            box-shadow: inset 0 0 0 1px $ho1_button_border_color;
            position: relative;
        }

        .btn::before, .btn::after {
            box-sizing: border-box;
            content: '';
            position: absolute;

            border: 2px solid transparent;
            width: 0;
            height: 0;
        }

        .btn::before {
            top: 0;
            left: 0;
        }

        .btn::after {
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
        }

        .btn:hover::before, .btn:hover::after {
            width: 100%;
            height: 100%;
        }

        .btn:hover::before {
            border-top-color: $ho1_button_border_hover_color;
            border-right-color: $ho1_button_border_hover_color;
            transition: width 0.2s ease-out, height 0.2s ease-out 0.2s;
        }

        .btn:hover::after {
            border-bottom-color: $ho1_button_border_hover_color;
            border-left-color: $ho1_button_border_hover_color;
            //transition: border-color 0s ease-out 0.4s, width 0.2s ease-out 0.4s, height 0.2s ease-out 0.6s;
            transition: height 0.2s ease-out, width 0.2s ease-out 0.2s;
        }
    }
}