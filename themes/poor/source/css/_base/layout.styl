* {
  //border: 1px solid #000;
  padding: 0;
  font-family: mononoki, Monaco, Menlo, Consolas, Sans, "Courier New", "Hiragino Sans GB", "Microsoft YaHei", "sans-serif";
}

a {
  text-decoration: none;
  color: #000;
}

body {
//  font-size: 22px;
}

.auto-width {
  width: 1000px;

  @media screen and (max-width: 1000px) {
    width: 100%;
  }
}

.header {
  margin-bottom: 50px;
}

.meta {
  position: relative;
  margin: 2px auto;
  padding-bottom: 10px;
}

.title-span {
  font-size: 36px;
  line-height: 55px;
}

.title {

}

.main-nav {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 28px;
  padding-top: 11px;
}

.main-nav ul {
  list-style: none;
  margin: 0;
}

.main-nav ul li {
  float: left;
  margin-left: 20px;
}

.header-line {
  height: 1px;
  width: 1200px;
  margin: 0 auto;
  border-top: 1px solid #bbb;

  @media screen and (max-width: 1200px) {
    width: 100%;
  }
}

.content {
  margin: 0 auto;
  padding-top: 40px;
}
