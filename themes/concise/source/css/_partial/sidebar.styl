#sidebar, #post-toc
  width 270px
  line-height 1.8em
  position relative


  @media screen and (max-width: 900px)
    margin 8px -15px 15px -10px
    float none
    width 100%
    display none

  .widget
    background #fff
    box-shadow: 0 -1px 0 #e5e5e5, 0 0 2px rgba(0, 0, 0, 0.12), 0 2px 4px rgba(0, 0, 0, 0.24);
    margin-bottom 30px
    word-wrap break-word
    .title
      padding 15px 20px
      font-size 1em
      border-bottom 1px solid color-border
      font-weight normal

    .entry
      font-size 10px
      padding 15px 20px
      a
        color color-meta
        &:hover
          color color-link

    .content-entry
      font-size 14px
      padding 15px 10px

    ul, ol, dl
      list-style none
      ul, ol, dl
        list-style disc
        margin-left 20px

      li a
        color color-meta
        &:hover
          color color-link

  .tag
    small
      margin-left 15px
      color color-meta
      &:before
        content '('
      &:after
        content ')'

  .twitter
    li
      border-bottom 1px solid color-border
      padding 15px 20px
      font-size 0.9em
      &:last-of-type
        border-bottom none
    small
      display block
      margin-top 10px
      color color-meta
      line-height 1

  .tagcloud
    .entry
      padding-right 5px
    a
      margin-right 10px
      display inline-block

.active
  color color-toc-active !important